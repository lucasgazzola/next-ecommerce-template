// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int    @id @default(autoincrement())
  title       String
  price       Float
  description String
  category    String
}

model User {
  id       Int     @id @default(autoincrement())
  email    String
  username String
  password String
  name     String
  phone    String
  adress   Adress?
}

model Adress {
  id          Int          @id @default(autoincrement())
  geolocation Geolocation?
  city        String
  number      Int
  street      String
  zipcode     String
  user        User         @relation(fields: [userId], references: [id])
  userId      Int          @unique
}

model Geolocation {
  id       Int    @id @default(autoincrement())
  lat      String
  long     String
  adress   Adress @relation(fields: [adressId], references: [id])
  adressId Int    @unique
}
